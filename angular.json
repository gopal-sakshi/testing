{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": "ccef3d7b-7a3a-4a86-86b7-b9cba3a130ad"
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "testing": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:application": {
          "strict": true
        },
        "@schematics/angular:component": {
          "style": "scss"          
        },
        "@schematics/angular:class": {
          "skipTests": true          
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:module": { },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },      
      "root": "",
      "sourceRoot": "src",
      "prefix": "app69",
      "architect": {
        "build": {
          // uses default Configuration
          "builder": "@angular-devkit/build-angular:browser",

          // while building; use custom webpack ===> webpack-config23.js
          // "builder": "@angular-builders/custom-webpack:browser",

          "options": {
            // "customWebpackConfig": {
            //   "path": "./webpack-config23.js",
            //   "replaceDuplicatePlugins": true
            // },
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico",
              "src/gopal612_favicon.ico",
              "src/rm_favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss",
              // if you add it here... bootstrap will be applied across entire application
              // "./node_modules/bootstrap/dist/css/bootstrap.css",
              "./node_modules/primeng/resources/themes/nova-light/theme.css",
              "./node_modules/primeng/resources/primeng.min.css"
            ],
            "scripts": [
              // use it either here (or) in index.html
              // "./node_modules/bootstrap/dist/js/bootstrap.js"
            ],
            "webWorkerTsConfig": "tsconfig.worker.json"
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "10mb",
                  "maximumError": "10mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "lukaBuild": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.luka.ts"
                }
              ]
            },
            "kroosBuild": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.kroos.ts"
                }
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {

          
          "builder": "@angular-devkit/build-angular:dev-server",

          // even while serving (developing locally)... use customWebpack only
          // "builder": "@angular-builders/custom-webpack:dev-server",

          "configurations": {
            "production": {
              "browserTarget": "testing:build:production"
            },
            "development": {
              "browserTarget": "testing:build:development"
            },
            "lukaServe": {
              "browserTarget": "testing:build:lukaBuild"
            },
            "kroosServe": {
              "browserTarget": "testing:build:kroosBuild"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",

          // "builder": "@angular-builders/custom-webpack:extract-i18n",
          "options": {
            "browserTarget": "testing:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [],
            "webWorkerTsConfig": "tsconfig.worker.json"
          }
        }
      }
    }
  },
  "defaultProject": "testing"
}
